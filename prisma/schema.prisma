generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pin {
  id     String   @id @default(uuid())
  name   String
  code   String?
  manu   PinManu
  year   Int
  type   PinType
  owner  String[]
  active Boolean  @default(true)
}

model Player {
  id        String   @id @default(uuid())  
  forename  String
  surname   String
  shortname String?
  photo     String?
  active    Boolean  @default(true)
}

model Tournament {
  id        String   @id @default(uuid())  
  name      String
  type      TournamentType
  status    TournamentStatus @default(Planned)
  testMode  Boolean @default(true)
  startDate DateTime
  endDate   DateTime
  players   String[]
  arenas    String[]
  settings  Json 
  results   Json
}

enum PinType {
  EM
  EE
  DMD
  LCD
}

enum PinManu {
  Bally
  DataEast
  Gottlieb
  Sega
  Stern
  Williams
  Zaccaria
}

enum TournamentType {
  FlipLiga
  FlipFinal
}

enum TournamentStatus {
  Planned
  Active
  Paused
  Stopped
  Completed
  Archived
}