generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pin {
  id     String   @id
  name   String
  code   String?
  manu   PinManu
  year   Int
  type   PinType
  owner  String[]
  active Boolean  @default(true)
}

model Player {
  id        String  @id
  forename  String
  surname   String
  shortname String?
  photo     String?
  active    Boolean @default(true)
  vip       Boolean @default(false)
}

model Tournament {
  id        String           @id @default(uuid())
  name      String
  type      String
  status    TournamentStatus @default(Planned)
  testMode  Boolean          @default(true)
  startDate DateTime
  endDate   DateTime
  players   String[]
  arenas    String[]
  settings  Json
  results   Json
}

model Guest {
  id   String  @id
  name String
  vip  Boolean @default(false)
}

model Appointment {
  id     String   @id
  date   DateTime
  guests String[]
  counts Int[]
  checks Boolean[]
}

enum PinType {
  EM
  EE
  DMD
  LCD
}

enum PinManu {
  Bally
  DataEast
  Gottlieb
  Sega
  Stern
  Williams
  Zaccaria
}

enum TournamentStatus {
  Planned
  Ready
  Active
  Stopped
  Completed
}
