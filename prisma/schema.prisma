generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model pin {
  id        String      @id
  created   DateTime    @default(now())
  name      String
  code      String?
  manu      PinManu     @default(Other)
  year      Int?
  type      PinType     @default(Other)
  active    Boolean     @default(true)
  deleted   Boolean     @default(false)
}

model player {
  id        String      @id
  created   DateTime    @default(now())
  forename  String
  surname   String
  shortname String?
  active    Boolean     @default(true)
  email     String?
}

model tourney {
  id        String      @id @default(uuid())
  created   DateTime    @default(now())
  name      String
  type      String
  players   String[]    @default([])
  settings  Json        @default("{}")
  results   Json        @default("{}")
  status    Status      @default(Planned)
}

model round {
  id        String      @id @default(uuid())
  created   DateTime    @default(now())
  tid       String
  rid       Int
  name      String
  status    Status      @default(Planned)
  players   String[]    @default([])
  settings  Json        @default("{}")
  results   Json        @default("{}")
  cache     Json        @default("{}")
}

model match {
  id        String      @id @default(uuid())
  created   DateTime    @default(now())
  tid       String
  rid       Int
  name      String
  player1   String
  player2   String
  score1    Int
  score2    Int
  pin       String
}

enum PinType {
  DataEast
  EM
  EE
  Gottlieb
  Pin2000
  SAM
  Spike
  Sys11
  WPC
  WPC95
  Whitestar
  Other
}

enum PinManu {
  Bally
  DataEast
  Gottlieb
  Sega
  Stern
  Williams
  Zaccaria
  Other
}

enum Status {
  Planned
  Active
  Completed
}
